<div class="container">
    <h1>Listado de usuarios</h1>
    <hr class="mb-3">

    {{#each users}}

    {{username}}

    <a href="/user/details/{{_id}}" class="btn btn-sm btn-dark">ver detalles</a>


    <a href="/user/edit/{{_id}}" class="btn btn-sm btn-info">editar</a>

    <form action="/user/delete/{{_id}}" method="POST" style="display: inline">
        <input type="submit" value="eliminar" class="btn btn-sm btn-danger">
    </form>


    <hr>

    {{/each}}

    <hr>
    <a href="/" class="btn btn-dark">Volver a inicio</a>
</div>