<div class="container">

    <h2>Welcome, {{user.username}}</h2>
    <hr>
    <div class="row">

        <div class="col-md-4 text-center avatar-box">
            <img class="avatar" id="profileImage" src="{{user.avatar}}" alt="Avatar Image">
        </div>
        <div class="col-md-8 d-flex movie-plot-box">
            <div class="col-md-6">
                <p>My email: {{user.email}}</p>
                <h4>My favorite movies:</h4>
                <div class="row movie-list-user">
                    {{#each favMovies}}
                    <div class="col-md-4">
                        <img class="poster-userlist mb-2" src="{{poster}}" alt="{{title}} poster">
                        <p class="movie-title"> {{title}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-4 text-center avatar-box">
        </div>
        <div class="col-md-6">
            <h4>Events I'm attending:</h4>
            <div class="row movie-list-user">
                {{#each user.myEvents}}
                <div class="col-md-4">
                    <img class="events-userlist mb-2" src="{{this.eventImg}}" alt="{{this.name}}">

                    <article>
                        <p><strong>Name:</strong> {{this.name}}</p>
                        <p><strong>Date:</strong> {{this.date}} | {{this.time.start}}-{{this.time.end}}</p>
                    </article>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <hr>
    <a href="/users/edit/{{user._id}}" class="btn btn-sm btn-info">Edit profile</a>

</div>