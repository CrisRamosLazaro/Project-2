                        {{/each}}
                    </select>


                    <label for="reviews">Reviews:</label>
                    <select id="reviews" name="reviews[]" multiple>

                        {{#each reviews}}
                        <option value="{{this._id}}">{{this.title}}</option>
                        {{/each}}
                    </select>


                    <label for="participants">Participants:</label>
                    <select id="participants" name="participants[]" multiple>

                        {{#each participants}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select> --}}

                    <div class="d-grid mt-5">
                        <button type="submit" class="btn btn-dark btn-lg">Create event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

